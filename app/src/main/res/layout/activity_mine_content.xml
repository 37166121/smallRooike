<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorDefault"
    tools:context=".activity.MineItemActivity"
    android:clipToPadding="true"
    android:fitsSystemWindows="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:id="@+id/mine_content_ll_title"
        android:elevation="@dimen/dp_7"
        android:weightSum="3"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/colorDefault"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/dp_36"
                android:layout_height="@dimen/dp_36"
                android:layout_marginStart="-32dp"
                android:id="@+id/mine_content_ll_title_iv_break"
                android:onClick="onClick"
                android:src="@drawable/previous308white"
                android:layout_gravity="center"
                tools:ignore="OnClick"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mine_content_ll_title_tv_name"
                android:text="@string/app_name"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/sp_18"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">
        </LinearLayout>
    </LinearLayout>
    <cn.edu.cqcet.yd1701.team11.smallrooike.customview.NoScrollViewPager
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mine_content_viewpager"
        app:layout_constraintTop_toBottomOf="@+id/mine_content_ll_title"
        app:layout_constraintBottom_toBottomOf="parent"/>
</LinearLayout>