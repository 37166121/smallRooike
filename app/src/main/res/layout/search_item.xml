<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/search_item_head"
        android:layout_width="@dimen/dp_65"
        android:layout_height="@dimen/dp_65"
        android:layout_margin="@dimen/dp_16"
        android:src="@drawable/avatar225blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/search_item_tel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/search"
        android:textSize="@dimen/dp_16"
        android:layout_margin="@dimen/dp_8"
        app:layout_constraintBottom_toBottomOf="@+id/search_item_head"
        app:layout_constraintStart_toEndOf="@+id/search_item_head"
        app:layout_constraintTop_toTopOf="@+id/search_item_head" />

    <Button
        android:id="@+id/search_item_statu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/style_search_item_btn_fillet"
        android:layout_margin="@dimen/dp_16"
        android:text="@string/addfriend"
        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="@+id/search_item_head"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/search_item_head" />
</androidx.constraintlayout.widget.ConstraintLayout>